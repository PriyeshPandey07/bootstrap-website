pipeline {
    agent {
        label 'agent'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url:'https://github.com/PriyeshPandey07/bootstrap-website.git', branch: 'main'
            }
        }
    
        stage("build image")
        {
            steps {
                script {
                    sh "docker build -t bootstrapimg ."
                }
            }
        }
        stage("run image")
        {
            steps {
                script {
                    sh "docker run -dit --name boot -p 6000:80 bootstrapimg:latest"
                }
            }
        }
    }
}
